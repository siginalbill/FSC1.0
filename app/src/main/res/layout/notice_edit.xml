<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
      xmlns:tools="http://schemas.android.com/tools"  
        android:id="@+id/LinearLayout"  
        android:layout_width="fill_parent"  
        android:layout_height="fill_parent"  
        android:orientation="vertical"   > 
        
        <LinearLayout
            android:id="@+id/Notice_Edit_LinearLayout_TitleBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/color_TitleBar"
            android:orientation="horizontal">
       
        <ImageView
            android:id="@+id/Notice_Edit_ImageView_Left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/notice_edit_leftarrow" />

       <TextView
            android:id="@+id/Notice_Edit_TextView_Title"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:paddingBottom="20sp"
            android:paddingTop="20sp"
            android:text="@string/Notice_Edit_Title"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
        
       <Button
            android:id="@+id/Notice_Button_Deliver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_TitleBar"
            android:text="@string/Notice_Edit_Deliver" />
       
        
        <ListView
            android:id="@+id/Homework_ListView_WorkList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </ListView>
      
    </LinearLayout>
     <LinearLayout
            android:id="@+id/Notice_Edit_LinearLayout_Theme"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#ffffff"
            android:orientation="horizontal">
       <TextView
            android:id="@+id/Notice_Edit_TextView_Theme"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:gravity="center_horizontal"
            android:paddingBottom="8sp"
            android:paddingTop="8sp"
            android:text="@string/Notice_Edit_Theme1"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
      <EditText
            android:id="@+id/Notice_Edit_EditText_Theme2"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:textSize="15sp"
            android:text="@string/Notice_Edit_Theme2"/>
     </LinearLayout>
       <TextView
            android:id="@+id/Notice_Edit_TextView_Body1"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_horizontal"
            android:paddingBottom="8sp"
            android:paddingTop="8sp"
            android:text="@string/Notice_Edit_Body1"
            android:textSize="20sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/Notice_Edit_EditText_Body2"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:textSize="15sp"
            android:text="@string/Notice_Edit_Body2"/>
        
       <LinearLayout
            android:id="@+id/Notice_Edit_LinearLayout_Cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="horizontal">
        
        <Button
            android:id="@+id/Notice_Edit_Button_Picture"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:text="@string/Notice_Edit_Picture" />
       
        <Button
            android:id="@+id/Notice_Edit_Button_Cancel"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:text="@string/Notice_Edit_Cancel" />
     </LinearLayout>
     </LinearLayout>
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        