<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="@color/white">
	<LinearLayout
		android:id="@+id/Activity_LatestNews_LinearLayout_BlueBar"
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:background="#0e7aac"

		android:orientation="horizontal">
		<LinearLayout
			android:layout_width="0dip"
			android:id="@+id/Acticity_LatestNews_LinearLayout_Left"
			android:layout_height="match_parent"
			android:layout_weight="1"

			>
			<ImageView
				android:layout_width="15dp"
				android:layout_height="20dp"
				android:layout_marginTop="5dp"
				android:id="@+id/Activity_LatestImageView_Left"
				android:layout_marginLeft="20dp"
				android:background="@drawable/left"
				/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:id="@+id/Activity_LatestNews_LinearLayout_More"
			android:layout_gravity="end"
			>

			<ImageView
				android:id="@+id/Activity_LatestImageView_Bell"
				android:layout_width="25dp"

				android:layout_height="25dp"
				android:layout_marginTop="5dp"
				android:background="@drawable/bell" />

			<ImageView
				android:id="@+id/Activity_LatestNews_ImageView_People"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="5dp"
				android:background="@drawable/people" />

			<ImageView
				android:id="@+id/Activity_LatestNews_ImageView_More"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="5dp"
				android:background="@drawable/add" />
		</LinearLayout>


	</LinearLayout>
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_shelf_category_divider" />

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
   		 <TextView
       		 android:layout_width="wrap_content"
        	 android:layout_height="wrap_content"
        	 android:layout_marginTop="10dp"
        	 android:layout_marginLeft="100dp"
       	 	 android:textSize="20dp"
        	 android:text="修改密码" />

	</LinearLayout>
	
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_shelf_category_divider" />

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="5dp"
         	android:layout_marginLeft="10dp"
        	android:text="用户名：" />

   		<EditText
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:ems="10" >
    	</EditText>
	</LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_shelf_category_divider" />

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
         	android:layout_marginLeft="10dp"
        	android:layout_marginTop="5dp"
        	android:text="旧密码：" />
	
		<EditText
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:ems="10" >
    	</EditText>
</LinearLayout>
	
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_shelf_category_divider" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
     	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
         	android:layout_marginLeft="10dp"
        	android:layout_marginTop="5dp"
        	android:text="新密码：" />

   		<EditText
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:ems="10" >
    	</EditText>
	</LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_shelf_category_divider" />
    
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
     	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
         	android:layout_marginLeft="10dp"
        	android:layout_marginTop="5dp"
        	android:text="确认密码：" />

   		<EditText
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:ems="10" >
    	</EditText>
	</LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_shelf_category_divider" />

    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_gravity="center"
        android:background="@drawable/shape"
        android:textColor="@color/white"
        android:text="提交修改结果" />

</LinearLayout>