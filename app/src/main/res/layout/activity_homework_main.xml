<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/color_TitleBar"
        android:orientation="horizontal"

        >
    
        <ImageView
        android:id="@+id/homework_back"
        android:layout_width="30sp"
        android:layout_height="25sp"

          android:layout_marginTop="5dp"
        android:src="@drawable/left" />
   
        <TextView
            android:id="@+id/homework_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作业"
            android:layout_weight="5"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
        android:gravity="center"
        />
        <TextView
            android:id="@+id/activity_handhomework_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布作业"
            android:textSize="20sp"
            android:layout_gravity="end"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:layout_marginTop="0dp"
            />

     </LinearLayout>
    
   <ImageView
       android:id="@+id/activity_homedataview_devider"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/ic_shelf_category_divider" />

    <ListView
        android:id="@+id/homework_listView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

    </ListView>

</LinearLayout>