<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <LinearLayout
    android:id="@+id/Safe_School_Detail_LinearLayout_BlueBar"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="@color/color_TitleBar"

    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dip"
        android:id="@+id/Acticity_Mark_Mainpage_LinearLayout_Left"
        android:layout_height="match_parent"
        android:layout_weight="1"

        >
        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:id="@+id/Safe_School_Detail_ImageView_Left"
            android:layout_marginLeft="20dp"
            android:background="@drawable/left"
            />
        <TextView
            android:id="@+id/activity_safe_school_showTextlead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="安全校园"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textSize="20sp" />
    </LinearLayout>



</LinearLayout>


     <ImageView
        android:id="@+id/activity_safe_school_img_partingline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/partingline" />
    <TextView
            android:id="@+id/activity_safe_school_showTextstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="本周出勤情况"
            android:textColor="@color/black"
            android:textSize="20sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/activity_safe_school_showTextdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="日期："
        android:textColor="@color/black"
        android:textSize="20sp" />

        <TextView
            android:id="@+id/activity_safe_school_showTexttodaydate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:textColor="@color/black"
            android:textSize="20sp" />


    </LinearLayout>



    <ImageView
        android:id="@+id/activity_safe_school_img_partingline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/partingline" />

    <ListView
        android:id="@+id/activity_safe_school_listView"
        android:layout_width="wrap_content"
        android:layout_height="365dp"
        android:layout_weight="0.74" >
    </ListView>

</LinearLayout>