<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/activity_pingyu_adapter_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/parent_head" />

    <TextView
        android:id="@+id/activity_pingyu_adapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/activity_pingyu_adapter_pic"
        android:text="张三家长"
        android:textSize="15sp" 
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/activity_pingyu_adapter_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/activity_pingyu_adapter_pic"
        android:layout_alignLeft="@id/activity_pingyu_adapter_name"
        android:layout_toRightOf="@id/activity_pingyu_adapter_pic"
        android:text="2017/7/27"
        android:textSize="15sp" 
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/activity_pingyu_adapter_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activity_pingyu_adapter_pic"
        android:layout_below="@+id/activity_pingyu_adapter_pic"
        android:text="aaaAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
        android:textColor="@color/grey"
        android:textSize="10sp" />

</RelativeLayout>