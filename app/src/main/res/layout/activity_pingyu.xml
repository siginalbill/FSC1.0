<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:background="#4e80ad"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/activity_pingyu_fanhui_button"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#4e80ad"
            android:padding="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/left" />

        <TextView
            android:id="@+id/activity_pingyu_biaozhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="200"
            android:padding="1dp"  
            android:text="                  评语"
            android:textColor="@color/white"
            android:textSize="23sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/activity_pingyu_xingming_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="50dp"
        android:text="姓名:"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/activity_pingyu_xuehao_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activity_pingyu_xingming_textview"
        android:layout_below="@+id/activity_pingyu_xingming_textview"
        android:layout_marginTop="15dp"
        android:text="学号:"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/activity_pingyu_xianshixuehao_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/activity_pingyu_xuehao_textview"
        android:layout_toRightOf="@+id/activity_pingyu_xuehao_textview"
        android:text="OKOK"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/activity_pingyu_xianshixingming_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/activity_pingyu_xingming_textview"
        android:layout_toRightOf="@+id/activity_pingyu_xingming_textview"
        android:text="OOKK"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/activity_pingyu_image"
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:layout_marginTop="110dp"
        android:scaleType="matrix"
        android:src="@drawable/pic1" />

    <ListView
        android:id="@+id/activity_pingyu_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_pingyu_image" />

</RelativeLayout>