<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/color_TitleBar"
        android:padding="5dp"
        android:orientation="horizontal"
        
        >
        <ImageView
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/Activity_Mark_Mainpage_ImageView_Left"
                
                android:background="@drawable/notice_edit_leftarrow"
                
                />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公告详情" 
            android:layout_weight="10"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            />
        
    </LinearLayout>

    <TextView
        android:id="@+id/notice_detile_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="题目"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/black"
        
        />

    <TextView
        android:id="@+id/notice_detile_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017/28/2" 
        android:textSize="12sp"
        android:layout_gravity="right"
        android:padding="5dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/notice_detile_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我日" 
        android:textSize="12sp"
        android:layout_gravity="right"
        android:padding="5dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/notice_detile_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:paddingStart="20dp"
        android:text="左手，即左边的手，与右手相对。习惯使用左手做事的人被称为“左撇子”。一些人习惯用左手写字，而且写得很好。在全世界范围内，左撇子约占总人口的15%左右。左撇子和右撇子并无特殊区别。"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:lineSpacingMultiplier="2"
        
        
        />
        
</LinearLayout>