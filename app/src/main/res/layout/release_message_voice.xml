<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/activity_liuyan_yuyin_imageview_touxiang"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/parent" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    >

</LinearLayout>
    <TextView
        android:id="@+id/activity_liuyan_yuyin_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/activity_liuyan_yuyin_imageview_touxiang"
        android:text="张三"
        android:textColor="@color/black"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/activity_liuyan_yuyin_textview_nametail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@id/activity_liuyan_yuyin_textview_name"
        android:text="家长"
        android:textColor="@color/black"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/activity_pingyu_yuyin_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-5dp"
        android:layout_alignBottom="@id/activity_liuyan_yuyin_imageview_touxiang"
        android:layout_alignLeft="@id/activity_liuyan_yuyin_textview_name"
        android:layout_toRightOf="@id/activity_liuyan_yuyin_imageview_touxiang"
        android:text="2017/7/27"
        android:textColor="@color/gray"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_liuyan_yuyin_imageview_touxiang"
        android:id="@+id/ly_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="今晚打老虎"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="left"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/activity_liuyan_wenzi_textview_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="aaaAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
            android:textColor="@color/grey"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>