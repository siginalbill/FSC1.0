<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="@color/white">

     <LinearLayout
		 android:layout_width="match_parent"
		 android:layout_height="35dp"
		 android:orientation="horizontal"

		 android:background="@color/color_TitleBar">
		 <ImageView
			 android:layout_width="15dp"
			 android:layout_height="25dp"
			 android:layout_marginTop="5dp"
			 android:id="@+id/Activity_Mark_Student_Page_ImageView_Left"
			 android:layout_marginLeft="20dp"
			 android:background="@drawable/left"
			 />
		 <TextView
			 android:id="@+id/homework_dataview_date"
			 android:layout_width="match_parent"
			 android:layout_height="wrap_content"
			 android:text="2014-07-21"
			 android:gravity="center"
			 android:textColor="@color/white"
			 android:layout_marginTop="5dp"
			 android:textSize="20sp" />
	 </LinearLayout>

     <ImageView
        	android:id="@+id/activity_homedataview_devider1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/ic_shelf_category_divider" />
     
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal" >
    		
        	 <TextView
            android:id="@+id/homework_dataview_chinese2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语文"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:textSize="20sp" />
        

            
       		 </LinearLayout>
         <ImageView
        	android:id="@+id/activity_homedataview_devider2"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/ic_shelf_category_divider"
			 />
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="81dp"
             android:orientation="horizontal"
			 android:layout_marginRight="20dp"
			 android:layout_marginLeft="20dp">

        	<TextView
            android:id="@+id/homework_dataview_chinese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语文作业内容"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />
                
         	</LinearLayout>
             <ImageView
        	android:id="@+id/activity_homedataview_devider3"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/ic_shelf_category_divider" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="48dp"
             android:orientation="horizontal" >
    		
        	 <TextView
            android:id="@+id/homework_dataview_math1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="数学"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="20sp" />
        

            
       		 </LinearLayout>
       		      <ImageView
        	android:id="@+id/activity_homedataview_devider4"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/ic_shelf_category_divider" />
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="84dp"
             android:orientation="horizontal"
			 android:layout_marginRight="20dp"
			 android:layout_marginLeft="20dp">

        	<TextView
            android:id="@+id/homework_dataview_math"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数学作业内容"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />
                
         	</LinearLayout>
             <ImageView
        	android:id="@+id/activity_homedataview_devider5"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/ic_shelf_category_divider" /> 
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="54dp"
             android:orientation="horizontal" >
    		
        	 <TextView
            android:id="@+id/homework_dataview_english1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="英语"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:textSize="20sp" />

            
       		 </LinearLayout>
            <ImageView
        	android:id="@+id/activity_homedataview_devider"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/ic_shelf_category_divider" />  

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
			android:layout_marginRight="20dp"
			android:layout_marginLeft="20dp">

        	<TextView
            android:id="@+id/homework_dataview_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="英语作业内容"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />
                
         	</LinearLayout>
         
        

</LinearLayout>
